	<queryString>
		<![CDATA[SELECT EMP.NAME AS NOMBRE_EMPLEADO,
(case when VAC.EM_NE_DOCSTATUS= 'BR' THEN 'Borrador'
when VAC.EM_NE_DOCSTATUS = 'PA' THEN 'Por AprobaciÃ³n'
when VAC.EM_NE_DOCSTATUS = 'RC' THEN 'Rechazada'
when VAC.EM_NE_DOCSTATUS = 'AP' THEN 'Aprobada'
when VAC.EM_NE_DOCSTATUS = 'PR' THEN 'Por Registrar'
when VAC.EM_NE_DOCSTATUS = 'TM' THEN 'Tomada'
when VAC.EM_NE_DOCSTATUS = 'CN' THEN 'Cancelada'
ELSE 'OTROS'
END) AS ESTADO_VACACION,
SUM(VAC.EM_NE_TOTAL_DIAS)  AS DIAS
FROM NO_VACACION VAC, NO_CONTRATO_EMPLEADO CEMP, C_BPARTNER EMP
WHERE VAC.NO_CONTRATO_EMPLEADO_ID = CEMP.NO_CONTRATO_EMPLEADO_ID
AND  CEMP.C_BPARTNER_ID = EMP.C_BPARTNER_ID
AND VAC.EM_NE_DOCSTATUS = $P{DOCSTATUS}
AND  VAC.EM_NE_FECHA_INICIO > DATE($P{DATE_FROM}) AND VAC.EM_NE_FECHA_FIN < DATE($P{DATE_TO})
GROUP BY 1,2]]>
	</queryString>
