	<parameter name="DATE_FROM" class="java.lang.String"/>
	<parameter name="DATE_TO" class="java.lang.String"/>
	<queryString>
		<![CDATA[select emp.name AS NOMBRE_EMPLEADO,
per.fecha_permiso AS FECHA_PERMISO,
(case when per.tipo_permiso= 'PM' THEN 'Permiso Medico'
when per.tipo_permiso= 'CA' THEN 'Capacitación'
when per.tipo_permiso= 'TP' THEN 'Tramites Personales'
when per.tipo_permiso= 'CD' THEN 'Calamidad Domestica'
ELSE 'OTROS'
END) AS TIPO_PERMISO,
(CASE WHEN per.motivo_permiso = '01' THEN 'Médico'
 WHEN per.motivo_permiso = '02' THEN 'Calamidad Doméstica'
 WHEN per.motivo_permiso = '03' THEN 'Trámites Personales'
 WHEN per.motivo_permiso = '04' THEN 'Capacitación'
ELSE 'OTROS'
END) as motivo,
per.dias AS DIAS,
per.horas AS HORAS,
(CASE WHEN per.em_ne_estado = 'BR' THEN 'Borrador'
 WHEN per.em_ne_estado = 'PA' THEN 'Por Aprobar'
 WHEN per.em_ne_estado = 'AP' THEN 'Aprobado'
 WHEN per.em_ne_estado = 'PR' THEN 'Por Registrar'
 WHEN per.em_ne_estado = 'CV' THEN 'Carga Vacación'
 WHEN per.em_ne_estado = 'CN' THEN 'Cancelado'
 WHEN per.em_ne_estado = 'SCV' THEN 'Justificado'
 WHEN per.em_ne_estado = 'RC' THEN 'Rechazado'
 WHEN per.em_ne_estado = 'FL' THEN 'Falta'
 WHEN per.em_ne_estado = 'PJ' THEN 'Por Justificar'
 WHEN per.em_ne_estado = 'JS' THEN 'Justificado'
 WHEN per.em_ne_estado = 'NJ' THEN 'No Justificado'
ELSE 'OTROS'
END) AS ESTADO_PERMISO

FROM no_permiso per, no_contrato_empleado con , c_bpartner emp
WHERE per.no_contrato_empleado_id = con.no_contrato_empleado_id
AND con.c_bpartner_id = emp.c_bpartner_id
AND per.fecha_permiso BETWEEN date($P{DATE_FROM}) and date($P{DATE_TO})
]]>
	</queryString>
